<Window x:Class="Sticky_Image.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sticky_Image"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        MouseDown="Window_MouseDown"
        mc:Ignorable="d"
        Title="Sticky Image" Height="400" Width="500">
    <Grid>
        <Image x:Name="image" Drop="Image_Drop" AllowDrop="True" DragEnter="Image_DragEnter" Source="image.png" MouseLeftButtonDown="Image_MouseLeftButtonDown" Stretch="Uniform" StretchDirection="Both"/>
    </Grid>
</Window>
